<button 
  id="theme-toggle"
  class="theme-toggle"
  aria-label="Cambiar tema"
>
  <svg class="icon-sun" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
  </svg>
  <svg class="icon-moon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
  </svg>
</button>

<style>
  .theme-toggle {
    @apply relative p-2 rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200;
  }

  .icon-sun,
  .icon-moon {
    @apply w-6 h-6 transition-all duration-300;
  }

  .icon-moon {
    @apply absolute opacity-0 scale-0;
  }

  .dark .icon-sun {
    @apply opacity-0 scale-0;
  }

  .dark .icon-moon {
    @apply opacity-100 scale-100;
  }

  .icon-sun {
    @apply opacity-100 scale-100;
  }
</style>

<script>
  // Obtener el estado inicial del tema
  function getInitialTheme() {
    if (typeof window !== 'undefined') {
      const stored = localStorage.getItem('theme');
      if (stored) {
        return stored;
      }
      // Verificar preferencia del sistema
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }
    return 'light';
  }

  // Aplicar tema
  function setTheme(theme: string) {
    if (typeof document !== 'undefined') {
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
      localStorage.setItem('theme', theme);
    }
  }

  // Inicializar tema al cargar
  if (typeof document !== 'undefined') {
    const initialTheme = getInitialTheme();
    setTheme(initialTheme);

    // Toggle theme button
    const themeToggle = document.getElementById('theme-toggle');
    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const currentTheme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        setTheme(newTheme);
      });
    }

    // Escuchar cambios en la preferencia del sistema
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
      if (!localStorage.getItem('theme')) {
        setTheme(e.matches ? 'dark' : 'light');
      }
    });
  }
</script>

