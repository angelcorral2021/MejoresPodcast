---
import type { Podcast } from '../types/podcast';

interface Props {
  podcast: Podcast;
}

const { podcast } = Astro.props;

const youtubeUrl = `https://www.youtube.com/watch?v=${podcast.youtubeId}`;
const embedUrl = `https://www.youtube.com/embed/${podcast.youtubeId}`;
---

<div class="video-card group">
  <a href={`/podcast/${podcast.id}`} class="block">
    <div class="thumbnail-container">
      <img 
        src={podcast.thumbnail} 
        alt={podcast.title}
        class="thumbnail-image"
        loading="lazy"
      />
      <div class="play-overlay">
        <svg class="play-icon" fill="currentColor" viewBox="0 0 20 20">
          <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"/>
        </svg>
      </div>
      {podcast.duration && (
        <div class="duration-badge">
          {podcast.duration}
        </div>
      )}
    </div>
    <div class="card-content">
      <div class="category-tag">{podcast.category}</div>
      <h3 class="card-title">{podcast.title}</h3>
      <p class="card-description">{podcast.description}</p>
      <div class="card-meta">
        <span class="podcast-name">{podcast.podcastName}</span>
        {podcast.episodeNumber && (
          <span class="episode-number">Ep. {podcast.episodeNumber}</span>
        )}
        <span class="card-date">{new Date(podcast.date).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
      </div>
    </div>
  </a>
</div>

<style>
  .video-card {
    @apply bg-white dark:bg-gray-800 rounded-xl shadow-lg dark:shadow-gray-900/50 overflow-hidden transition-all duration-300 hover:shadow-2xl dark:hover:shadow-gray-900 hover:-translate-y-1;
  }

  .thumbnail-container {
    @apply relative aspect-video w-full overflow-hidden bg-gray-200 dark:bg-gray-700;
  }

  .thumbnail-image {
    @apply w-full h-full object-cover transition-transform duration-300 group-hover:scale-110;
  }

  .play-overlay {
    @apply absolute inset-0 flex items-center justify-center bg-black bg-opacity-0 transition-all duration-300 group-hover:bg-opacity-40;
  }

  .play-icon {
    @apply w-16 h-16 text-white opacity-0 transition-opacity duration-300 group-hover:opacity-100 transform scale-75 group-hover:scale-100;
  }

  .duration-badge {
    @apply absolute bottom-2 right-2 bg-black bg-opacity-75 text-white px-2 py-1 rounded text-sm font-medium;
  }

  .card-content {
    @apply p-6;
  }

  .category-tag {
    @apply inline-block px-3 py-1 bg-purple-100 dark:bg-purple-900/50 text-purple-700 dark:text-purple-300 rounded-full text-xs font-semibold mb-3;
  }

  .card-title {
    @apply text-xl font-bold text-gray-900 dark:text-white mb-2 line-clamp-2;
  }

  .card-description {
    @apply text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-3;
  }

  .card-meta {
    @apply flex items-center gap-3 text-xs text-gray-500 dark:text-gray-400 flex-wrap;
  }

  .podcast-name {
    @apply font-semibold text-gray-700 dark:text-gray-300;
  }

  .episode-number {
    @apply px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded;
  }

  .card-date {
    @apply ml-auto;
  }
</style>

