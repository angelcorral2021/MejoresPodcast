<style>
  .footer {
    @apply bg-gray-900 dark:bg-black text-white mt-16;
  }

  .footer-container {
    @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12;
  }

  .footer-content {
    @apply grid grid-cols-1 md:grid-cols-3 gap-8 mb-8;
  }

  .footer-section {
    @apply space-y-4;
  }

  .footer-title {
    @apply text-2xl font-bold text-purple-400 mb-4;
  }

  .footer-description {
    @apply text-gray-400 leading-relaxed;
  }

  .footer-subtitle {
    @apply text-lg font-semibold mb-4;
  }

  .footer-links {
    @apply space-y-2;
  }

  .footer-links a {
    @apply text-gray-400 hover:text-purple-400 transition-colors block;
  }

  .social-links {
    @apply flex gap-4;
  }

  .social-link {
    @apply text-gray-400 hover:text-purple-400 transition-colors;
  }

  .footer-bottom {
    @apply border-t border-gray-800 dark:border-gray-900 pt-8 text-center text-gray-400 text-sm;
  }
</style>

