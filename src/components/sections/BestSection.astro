---
import PodcastCard from '../PodcastCard.astro';
import { getBestRatedPodcasts } from '../../data/podcasts';
import { getPodcastLikes } from '../../utils/likes';

interface Props {
  limit?: number;
}

const { limit = 6 } = Astro.props;

// Mejores episodios (por rating, con likes integrados)
const bestEpisodes = getBestRatedPodcasts(limit).map(podcast => ({
  ...podcast,
  likes: getPodcastLikes(podcast.id) || podcast.likes || 0
}));
---

<section class="section" id="best-section">
  <div class="section-header">
    <div class="section-title-wrapper">
      <h2 class="section-title">
        <svg class="section-icon" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
        </svg>
        Mejores Cap√≠tulos o Episodios
      </h2>
      <p class="section-subtitle">Los episodios mejor valorados por la comunidad</p>
    </div>
  </div>
  <div class="podcasts-grid">
    {bestEpisodes.map((podcast) => (
      <PodcastCard podcast={podcast} />
    ))}
  </div>
</section>

<style>
  .section {
    @apply scroll-mt-8;
  }

  .section-header {
    @apply flex items-end justify-between mb-8 flex-wrap gap-4;
  }

  .section-title-wrapper {
    @apply flex-1;
  }

  .section-title {
    @apply flex items-center gap-3 text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2;
  }

  .section-icon {
    @apply w-8 h-8 text-purple-600 dark:text-purple-400;
  }

  .section-subtitle {
    @apply text-lg text-gray-600 dark:text-gray-400;
  }

  .podcasts-grid {
    @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8;
  }
</style>

