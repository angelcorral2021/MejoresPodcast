---
import PodcastCard from '../PodcastCard.astro';
import { getCultPodcasts } from '../../data/podcasts';
import { getPodcastLikes } from '../../utils/likes';

// De culto (con likes integrados)
const cultPodcasts = getCultPodcasts().map(podcast => ({
  ...podcast,
  likes: getPodcastLikes(podcast.id) || podcast.likes || 0
}));
---

<section class="section cult-section" id="cult-section">
  <div class="section-header">
    <div class="section-title-wrapper">
      <h2 class="section-title">
        <svg class="section-icon" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        De Culto
      </h2>
      <p class="section-subtitle">Episodios icónicos que han marcado la historia de los podcasts</p>
    </div>
  </div>
  {cultPodcasts.length > 0 ? (
    <div class="podcasts-grid">
      {cultPodcasts.map((podcast) => (
        <PodcastCard podcast={podcast} />
      ))}
    </div>
  ) : (
    <p class="empty-message">No hay podcasts de culto disponibles aún.</p>
  )}
</section>

<style>
  .section {
    @apply scroll-mt-8;
  }

  .section-header {
    @apply flex items-end justify-between mb-8 flex-wrap gap-4;
  }

  .section-title-wrapper {
    @apply flex-1;
  }

  .section-title {
    @apply flex items-center gap-3 text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2;
  }

  .section-icon {
    @apply w-8 h-8 text-purple-600 dark:text-purple-400;
  }

  .section-subtitle {
    @apply text-lg text-gray-600 dark:text-gray-400;
  }

  .podcasts-grid {
    @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8;
  }

  .cult-section {
    @apply bg-gradient-to-br from-yellow-50 to-orange-50 dark:from-yellow-900/20 dark:to-orange-900/20 rounded-2xl p-8;
  }

  .empty-message {
    @apply text-center text-gray-500 dark:text-gray-400 py-12;
  }
</style>

